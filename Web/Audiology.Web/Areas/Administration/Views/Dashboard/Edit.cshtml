@{
    @using Audiology.Data.Models.Enumerations
    @model Audiology.Data.Models.ApplicationUser
}

<form asp-area="Administration" asp-controller="Dashboard" asp-action="Edit" method="post">
    <h4>Edit account.</h4>
    <hr />
    <div class="form-group">
        <img src="@Model.ProfilePicUrl" width="60" height="60" style="margin-right: 10px;" class="card-text rounded-circle" />
        <label asp-for="@Model.ProfilePicUrl"></label>
        <input asp-for="@Model.ProfilePicUrl" class="form-control">
    </div>
    <br />
    <div class="form-row">
        <div class="col">
            <label asp-for="@Model.FirstName"></label>
            <input asp-for="@Model.FirstName" class="form-control" />
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="@Model.LastName"></label>
            <input asp-for="@Model.LastName" class="form-control" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="@Model.UserName"></label>
            <input asp-for="@Model.UserName" class="form-control" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Birthday"></label>
        <input asp-for="@Model.Birthday" class="form-control" />
        <span asp-validation-for="@Model.Birthday" class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="col">
            <label asp-for="@Model.InstagramUrl"></label>
            <input asp-for="@Model.InstagramUrl" class="form-control" />
            <span asp-validation-for="@Model.InstagramUrl" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="@Model.FacebookUrl"></label>
            <input asp-for="@Model.FacebookUrl" class="form-control" />
            <span asp-validation-for="@Model.FacebookUrl" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="@Model.YouTubeUrl"></label>
            <input asp-for="@Model.YouTubeUrl" class="form-control" />
            <span asp-validation-for="@Model.YouTubeUrl" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="@Model.TwitterUrl"></label>
            <input asp-for="@Model.TwitterUrl" class="form-control" />
            <span asp-validation-for="@Model.TwitterUrl" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="@Model.SondcloudUrl"></label>
            <input asp-for="@Model.SondcloudUrl" class="form-control" />
            <span asp-validation-for="@Model.SondcloudUrl" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label><input type="radio" asp-for="@Model.Gender" value="Male" />Male</label>

        <label><input type="radio" asp-for="@Model.Gender" value="Female" />Female</label>
    </div>
    <hr />
    <div>
        <button type="submit" class="btn btn-dark btn-lg"><i class="fas fa-sign-in-alt"></i> Edit</button>

        <button asp-area="Administration" asp-controller="Dashboard" asp-action="Delete" asp-route-id="@Model.Id" type="submit" class="btn btn-outline-danger float-lg-right">Delete</button>
    </div>
</form>