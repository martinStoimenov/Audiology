@{
    @model IEnumerable<Audiology.Web.ViewModels.Playlists.PlaylistViewModel>
}

<h3 class="text-center font-italic" style="margin-bottom: 3rem;">All of your playlists</h3>

<div class="row">
    @foreach (var playlist in Model)
    {
        <div class="col-md-4" style="height: 12rem;">
            <img src="@playlist.SongArtUrl" width="303px" height="190px" alt="Add song to see the art :)" />
            <div class="text-center" style="width: 19rem; background-color: #f4f4f4">
                <a asp-controller="Playlists" asp-action="ById" asp-route-id="@playlist.Id" class="stretched-link" style="text-decoration: none;
            color: black;">@playlist.Name</a>
            </div>
        </div>
    }
</div>
