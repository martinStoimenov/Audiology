@{
    this.ViewBag.Title = "Chat";
}
    <br />
    <br />
    
<div class="container" style="width: 55rem;">
    <div id="message-holder" class="mt-3 d-flex justify-content-start">
        <input class="w-75 ml-4 pl-3" type="text" id="messageInput" placeholder="Message..." />
        <button id="sendButton" class="ml-4 btn btn-success btn-lg">Send</button>
    </div>
    <div id="messagesList" class="border-left border-success border-right border-success" style="font-size: 21px; padding-left: 1rem; margin-right: 5rem; margin-left: 1rem; margin-top: 2rem;">
    </div>
</div>

@section Scripts {
    <script>
        var connection =
            new signalR.HubConnectionBuilder()
                .withUrl("/chat")
                .build();

        connection.on("NewMessage",
            function (message) {
                var chatInfo = `<div>[${message.user}] ${escapeHtml(message.text)}</div>`;
                $("#messagesList").append(chatInfo);
            });

        $("#sendButton").click(function() {
            var message = $("#messageInput").val();
            connection.invoke("Send", message);
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });

        function escapeHtml(unsafe) {
            return unsafe
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }
    </script>
}