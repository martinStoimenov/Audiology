@{
    this.ViewBag.Title = "Chat";
    @model IEnumerable<Audiology.Web.ViewModels.Messages.MessagesDropDownViewModel>
}
<br />
<br />
<div><span class=" text-success" style="margin-left: 11rem;">chat with artist_</span></div>
<div id="messagesList" class="border-left border-success border-right border-success" style="height: 10rem; font-size: 21px; padding-left: 1rem; padding-right: 1rem; margin-top: 2rem;">
</div>
<div class="container" style="        width: inherit;
">
    <div id="message-holder" class="mt-3 d-flex justify-content-start">
        <input class="pl-3" type="text" id="messageInput" style="width: 69%;" placeholder="Message..." />
        <button id="sendButton" class="ml-3 btn btn-success btn-lg"><i class="fab fa-facebook-messenger"></i> Send</button>
    </div>
    <div id="artistId" style="display: none">@ViewData["ArtistId"]</div>
</div>

@if (Model != null)
{
    <div>
        <label>Select convos :</label>
        <select id="userId" asp-items="@Model.Select(x=> new SelectListItem(x.Name, x.UserId.ToString()))" class="form-control">
            <option value="" selected disabled hidden>Select conversation</option>
        </select>
    </div>
}